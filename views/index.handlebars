<div class="container  deep-orange accent-1">
    <div class="jumbotron text-center brown darken-4" style="margin-top:0">
        <h1 style="text-shadow: 2px 2px gray; color:orange" class="jumbotronic">Me want da Burger !!!</h1>
        <h6 style=" text-shadow: 1px 1px gray; color:white">Track your Burger Order and Devour it fresh !!!</h6>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="card-panel mx-auto" style="width: 20rem;">
                <div class="card-body">
                    <h5>Burgers waiting to be devoured!</h5><br>
                    <ul>
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <li>
                            <p> {{this.id}} ) {{this.burger_name}}
                                <button data-id="{{this.id}}" class="devourBurger">Devour it!</button>
                            </p>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12">
                <img src="/assets/img/cute-panda-eating-burger.jpg" href="#" alt="hamburger" id="imageElem" width="300"
                    height="300">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                <form class="create-form">
                    <div class="form-group">
                        <textarea style="color:black" placeholder="Enter a burger you want to devour" id="burger"
                            name="burger" rows="8" cols="30"></textarea>
                    </div>
                    <button type="submit" id="submitBtn"> Submit</button>
                </form>
                <p>Enter a burger you want to devour and Click the "Submit" button...</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card-panel mx-auto" style="width: 20rem;">
                <div class="card-body">
                    <h5>Devoured Burgers! Burp...</h5><br>
                    <ul>
                        {{#each burgers}}
                        {{#if this.devoured}}
                        <li>
                            <p> {{this.id}} ) {{this.burger_name}}
                                <button data-id="{{this.id}}" class="deleteBurger">Delete</button>
                            </p>
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>